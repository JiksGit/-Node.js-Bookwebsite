
    <h1>검색화면 </h1>

    <form action="/book/search" method="post">
        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2  col-form-label"><%=kind%></label>
          <div class="col-sm-5">
            <input type="id" class="form-control" placeholder="책 제목을 입력하세요" name="keyword" maxlength="50">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">검색</button>
    </form>
    <p>
      <% if (listyn == "Y")
        {    
      %>
            <table class="table">
      <%    var i = 0;
            while(i < bs.length) {
      %>
              <tr><td><img src="/images/<%=bs[i].img%>" style="width:100px;height:100px; "></td><td><a href="/book_detail/<%=bs[i].id%>"><%=bs[i].name%></a></td><td><%=bs[i].author%></td><td><%=bs[i].price%>원</td>
              </tr>
      <% 
          i++; 
        }  
      %>
          </table>
      <%
        } %>
    </p>